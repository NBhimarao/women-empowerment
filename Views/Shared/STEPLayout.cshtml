@{
    ViewData["Title"] = "STEP Dashboard";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-brand img {
            margin-right: 10px;
        }

        /*  .bg-lightblue {
            background-color: #e6f7ff;
           
        }  */

        .navbar-nav {
            flex-grow: 1;
            justify-content: center;
            border:2px solid lightseagreen;
            display:flex;
            justify-content:space-around;
            position:relative;
            top:7px;
           background-color:lightseagreen;
           
        }

        .navbar-light .navbar-nav .nav-link {
            color:black;
            font-weight:bold;
        }

        .navbar-light:hover .navbar-nav:hover .nav-link:hover {
            color:red;
            background-color:white;
            border-radius:10px;
        }

        .nav-item {
            text-align: center;
            color:white;
            font-weight:bold;

        }

        .dropdown-menu {
            text-align: center;
        }

            .dropdown-menu a {
                display: block; 
            }

        .navbar-center {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            margin: auto;
            color:white;
        }
        body{
            background-color:aliceblue;
            
        }
       .nav-link{
           color:white;
       }
        
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white" style="color:white">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent1" >
                <ul class="navbar-nav mb-2 mb-lg-0" id="a1">
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item" style="position:relative;left:430px">
                        <a class="nav-link " asp-area="" asp-controller="NGOs" asp-action="ContactUs">CONTACT US</a>
                    </li>
                    <li class="nav-item" style="position:relative;left:100px">
                        <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="btn btn-link nav-link ">LOGOUT</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   
    <nav class="navbar navbar-expand-lg navbar-light bg-lightblue">
        <div class="container-fluid navbar-center">
            <a class="navbar-brand" href="#">
                <img src="~/Images/left-logo.png" alt="Logo" width="70" height="70" class="d-inline-block align-top">
                <span class="fs-5 fw-bold" style="font-size:25px;position:relative;top:6px">Support to Training and Employment Programme for Women (STEP)</span>
            </a>
        </div>
    </nav>


    <nav class="navbar navbar-expand-lg navbar-light bg-lightblue">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent3" aria-controls="navbarSupportedContent3" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent3">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="STEP" asp-action="AboutUs">ABOUT US</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="STEP" asp-action="Guideline">GUIDELINES</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            TRAINING SECTORS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Agriculture">Agriculture</a></li>
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Tailoring">Tailoring</a></li>
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Stitching">Stitching</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            NGOs
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="RegisteredNgos">REGISTERED NGOs</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="STEP" asp-action="STEPRegistration">REGISTRATION</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            STATUS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Status">DISPLAY APPLICATION STATUS OF BENEFICIARY</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="STEP" asp-action="FAq">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

    
