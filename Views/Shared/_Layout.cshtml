
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .light-blue-navbar {
            background-color: #e6f7ff;
        }

        .top-navbar {
            background-color: #e6f7ff;
        }
        .navbar-light .navbar-nav .nav-link {
            color:white;
            display:flex;
            justify-content:space-evenly;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color:black;
                background-color:white;
                border-radius:10px;
            }

            .navbar-light .navbar-nav .nav-link.active {
                color: #007bff;
            }
            span{
                color:black;
                word-spacing:3px;
            }

        .navbar-light .navbar-brand {
            color: #000;
        }

            .navbar-light .navbar-brand:hover {
                color: #007bff;
            }

        .left-logo-img, .Middle-logo-img, .right-logo-img {
            height: 70px;
            width:70px;/* Adjust height as needed */
            mix-blend-mode:multiply;
            display:flex;
            justify-content:center;
            cursor:pointer;
        }

        .navbar .navbar-expand-lg .navbar-light .light-blue-navbar
        {
            display:flex;
            justify-content:space-evenly;
        }

            .Middle-logo-img{
                position:relative;bottom:4px;
            }

        .header__logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

       
      
       
    </style>
</head>
<body>
    <nav class="navbar navbar-light top-navbar" style="border:2px solid none;height:170px;width:100%;background-color:azure">
        <div class="container-fluid">
            <a>
                <img class="left-logo-img" src="~/Images/left-logo.png" alt="Ministry of Women Child Development">
            </a>
            <h1 class="logo header__logo">
                <a>
                    <img class="Middle-logo-img" src="~/Images/emblem-dark.png" alt="national emblem">
                </a>
                <span>महिला एवं बाल विकास मंत्रालय</span>
                <span>Ministry of Women &amp; Child Development</span>
            </h1>
            <a>
                <img class="right-logo-img" src="~/Images/right-logo.png" alt="Beti Bachao">
            </a>
           @*  <a>
                <img class="left-last-img" src="~/Images/scroll container/sc9.jpeg" alt="Beti Bachao">
            </a> *@
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg navbar-light light-blue-navbar" style="border:2px solid lightseagreen;background-color:lightseagreen;font-weight:bold;display:flex;justify-content:center;position:relative;top:10px;text-align:center">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">ABOUT US</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="LegislationAndPolicy">LEGISLATIONS & POLICY</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("STEP"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="STEP" asp-action="STEPDashboard">STEP</a>
                            </li>
                        }
                        @if (User.IsInRole("NGO"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="NGOs" asp-action="NGOsDashboard">NGOS</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AdminDashboard">ADMIN</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="STEP" asp-action="STEPDashboard">STEP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="NGOs" asp-action="NGOsDashboard">NGOS</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AdminDashboard">ADMIN</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Faq">FAQ</a>
                     </li> 
                 </ul> 
            </div>
             <ul class="navbar-nav ms-auto"> 
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item"> 
                        <h6>Hello, @User.Identity.Name</h6>
                        <form asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                     </li> 
                }
                else
                {
                     <li class="nav-item"> 
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                    </li> 
                }
            </ul> 
        </div>
    </nav>
@RenderBody()
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Women_Empowerment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
