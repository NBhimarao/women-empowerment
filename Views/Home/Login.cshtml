@{
    ViewData["Title"] = "Login Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e6f7ff; /* Light blue background */
            margin: 0;
            padding: 0;
            height: 100%;
        }
       

        .center-form {
            display: flex;
            justify-content: center;
            align-items: center;
            position:relative;
            top:20px;
        }

        .card {
            background-color: #f0f8ff; /* Slightly lighter blue background for the card */
            border: none;
           /*  border-radius:50px; */
        }

        .card-header {
            background-color:lightseagreen; /* Bootstrap's primary color */
            color:white;
            font-weight:bold;
            border-radius:10px;
           
            
        }

        .form-control {
            background-color: #f0f8ff; /* Matching form input background with the card */
            border: 1px solid #007bff; /* Matching border with the header */
        }

        .form-label {
            color: #007bff; /* Matching label color with the header */
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .text-danger {
            color: #ff4d4f; /* Bright red for error messages */
        }
        
    </style>
</head>
<body>
    <div class="container center-form">
        <div class="col-md-6 mb-5">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form id="loginForm" asp-action="LoginPost" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" class="form-control" id="username" placeholder="Enter your username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required>
                        </div>
                        <div class="d-grid gap-2" style="width:100px;position:relative;left:250px">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <div class="mt-3 text-center">
                            <a href="~/Home/Registration">Create Account?</a>
                            <br>
                        </div>
                        @if (TempData["LoginErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-3 text-center">@TempData["LoginErrorMessage"]</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
